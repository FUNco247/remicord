extends ../base.pug

block contents
    div.loginbox
        div.login-input-wrap
            if errorMessage
            span=errorMessage
            form.login-form(method="POST")
                input(placeholder="아이디", name="username", type="text", required)
                input(placeholder="비밀번호", name="password", type="password", required)
                div.submitBtn
                    input(type="submit", class="loginBtn", value="로그인")